{
  "manifest_version": 3,
  "name": "Simple Reference Finder",
  "version": "1.0.0",
  "description": "Quickly filter research references by author and year",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["https://www.google.com/*", "https://scholar.google.com/*"],
    "js": ["content.js"]
  }]
}